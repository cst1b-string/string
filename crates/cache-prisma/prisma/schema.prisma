datasource db {
    provider = "sqlite"
    url      = "file:dev.db"
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Network {
    id       Int       @id @default(autoincrement())
    name     String
    channels Channel[]
    users    User[]
}

model Message {
    id        Int      @id @default(autoincrement())
    content   String
    timestamp DateTime
    author    User     @relation(fields: [authorId], references: [id])
    authorId  Int
    channel   Channel  @relation(fields: [channelId], references: [id])
    channelId Int
}

model Channel {
    id        Int       @id @default(autoincrement())
    title     String
    messages  Message[]
    network   Network   @relation(fields: [networkId], references: [id])
    networkId Int
}

model User {
    id        Int       @id @default(autoincrement())
    username  String
    messages  Message[]
    network   Network   @relation(fields: [networkId], references: [id])
    networkId Int
    peer      Peer?
}

model Peer {
    id       Int      @id @default(autoincrement())
    user     User     @relation(fields: [userId], references: [id])
    userId   Int      @unique
    address  String
    port     Int
    lastSeen DateTime
}
