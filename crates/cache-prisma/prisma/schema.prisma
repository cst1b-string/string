datasource db {
    provider = "sqlite"
    url      = "file:dev.db"
}

generator client {
    provider = "cargo prisma"
    output   = "../src/prisma.rs"
}

model Message {
    id        Int      @id @default(autoincrement())
    content   String
    timestamp DateTime @default(now())
    author    User     @relation(fields: [authorId], references: [id])
    authorId  Bytes
    channel   Channel  @relation(fields: [channelId], references: [id])
    channelId Int
}

model Channel {
    id       Int       @id @default(autoincrement())
    title    String
    messages Message[]
}

model User {
    id        Bytes     @id
    username  String
    biography String
    messages  Message[]
    peer      Peer?
}

model Peer {
    id       Bytes    @id
    user     User     @relation(fields: [id], references: [id])
    address  String
    port     Int
    lastSeen DateTime
}
